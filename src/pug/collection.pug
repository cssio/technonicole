									cite Лейла Смирнова <small>домовладелец</small>

				.reviews__item
					.row
						.col-md-6
							figure.reviews__item-image
								a(href="#")
									img(src="images/img-reviews-01.jpg", alt="")
									+sprite('icon-video')
