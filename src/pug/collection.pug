	// Reviews :: Start
	.reviews
		.container-fluid

			h2.reviews__heading отзывы клиентов

			.reviews__slides.js-slick-reviews

				.reviews__item
					.row
						.col-md-6
							figure.reviews__item-image
								a(href="#")
									img(src="images/img-reviews-01.jpg", alt="")
									+sprite('icon-video')
						.col-md-6.align-self-center

							.reviews__item-desc

								blockquote.reviews__item-blockquote
